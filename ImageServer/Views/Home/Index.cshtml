
@using ImageServer.Models;
@using System.IO;

@model List<ImageUpload>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>PHOTO MAGIC</h1>
    
    <!--<p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
    NEED A BACKGROUND IMAGE IF ITS POSSIBLE
        -->
</div class=image>
               
               <table>

                   <tr>
                       <th width="200" height="200" align="center"><font size="4"><b>IMAGE</b></font></th>

                       <th colspan="2" width="250" align="center"><font size="4"><b>IMAGE NAME</b></font></th>
                       <th colspan="3" width="100" align="center"><font size="4"><b>IMAGE ID</b></font></th>
                       <th colspan="4" width="100" align="center"><font size="4"><b>IMAGE TAG</b></font></th>
                       <th colspan="5" width="250" align="center"><font size="4"><b>DOWNLOAD</b></font></th>
               </tr>

                   @foreach (ImageUpload i in Model)
                   {
                   using (Html.BeginForm("DownloadImage", "Consumer", FormMethod.Post, new { enctype = "multipart/form-data" }))
                   {
                   <tr>
                       <td><img src="@i.ImagePath" width="200" height="200" /></td>
                       <td colspan="2">@Path.GetFileName(i.ImagePath)</td>
                       <td colspan="3">"@i.Id" @Html.Hidden("imageid",i.Id)@Html.Hidden("imagepath", i.ImagePath)</td>
                       <td colspan="4">"@i.ImageTags</td>
                       <td colspan="5"><input type="submit" value="Download" /></td>
                
                   </tr>
                   }

                   }
               </table>